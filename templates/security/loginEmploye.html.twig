{% extends 'base.html.twig' %}

{% block title %}Se connecter{% endblock %}

{% block content %}
<div class="container">
    <div class="row my-5 align-items-center">
        <div class="col-4"></div>
        <div class="col-4">
            <div class="">
                <div class="rounded">
                    <h1 class="text-center">Connexion du personnel</h1>
                </div>
                <br><br>

                <div class="card custom-card bg-dark-subtle"> <!-- Ajout de la classe custom-card -->
                    <div class="card-body">
                        <form method="post">
                            {% if error %}
                                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                            {% endif %}

                            {% if app.user %}
                                <div class="mb-3">
                                    You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_deconnexion') }}">DÃ©connexion</a>
                                </div>
                            {% endif %}
                            <h1 class="h3 mb-3 font-weight-normal text-center">Connectez-vous</h1>
                            <label for="inputEmail"></label>
                            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control"placeholder="Votre email" autocomplete="email" required autofocus>
                            <label for="inputPassword"></label>
                            <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Votre mot de passe" autocomplete="current-password" required>

                            <input type="hidden" name="_csrf_token"
                                value="{{ csrf_token('authenticate') }}"
                            >
                            {#
                            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                            See https://symfony.com/doc/current/security/remember_me.html

                            <div class="checkbox mb-3">
                                <label>
                                    <input type="checkbox" name="_remember_me"> Remember me
                                </label>
                            </div>
                            #}
                            <hr>
                            <button class="btn btn-lg btn-primary btn-sm" type="submit">
                                Se connecter
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-4"></div>
    </div>
</div>
{% endblock %}
