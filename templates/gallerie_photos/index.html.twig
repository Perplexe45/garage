{% extends 'base.html.twig' %}

{% block body %}

    <div class="border-title border border-danger bg-light rounded-3">
        <h1 class="text-center my-5 display-6">Nos véhicules actuellement en vente</h1>
    </div>

    <div class="container my-5">
        <div class="row">
        {% for voiture in voitures %}
            {% if not voiture.vendu %}
                <div class="row mb-5">
                    <div class="col-md-4 mb-3">
                        <div class="voiture-item">
                            <div class="card">
                                <h4 class="text-center">Référence: <span class="reference">{{ voiture.reference }}</span></h4>
                            </div>
                            <img id="voiture-image" class="w-98 rounded-bottom-3" src="/uploads/{{ voiture.image }}" alt="image de la voiture">
                            <div class="d-flex justify-content-between">
                                <h5 class="ps-3 py-2">kilomètres: <span class="text-muted">{{ voiture.kilometre }} km</span></h5>
                                <h5 class="pe-3 py-2">Prix: <span class="text-muted">{{ (voiture.prix/100) }} €</span></h5>
                            </div>
                        </div>
                        <a href="{{ path('app_gallerie_photos', {'voiture_id': voiture.id}) }}" class="btn btn-primary mt-1" data-bs-toggle="modal">Plus d'informations</a>
                    </div>

                        {% for gallerieImage in gallerieImages %}
                            {% if gallerieImage.voitures.contains(voiture) %}
                                <div class="col-md-5 mt-4">
                                    <h5 class="text-center" >Photos</h5>
                                    <div class=" d-flex justify-content-center">
                                        <img class="zoom-image mb-2 w-25 rounded-3" src="/uploads/{{ gallerieImage.img1 }}" alt="image de la voiture">
                                        <img class="zoom-image mb-2 ps-2 w-25 rounded-3" src="/uploads/{{ gallerieImage.img2 }}" alt="image de la voiture">
                                        <img class="zoom-image mb-2 ps-2 w-25 rounded-3" src="/uploads/{{ gallerieImage.img3 }}" alt="image de la voiture">
                                    </div>
                                    <div class="d-flex justify-content-center">
                                        <img class="zoom-image w-25 rounded-3" src="/uploads/{{ gallerieImage.img4 }}" alt="image de la voiture">
                                        <img class="zoom-image ps-2 w-25 rounded-3" src="/uploads/{{ gallerieImage.img5 }}" alt="image de la voiture">
                                        <img class="zoom-image ps-2 w-25 rounded-3" src="/uploads/{{ gallerieImage.img6 }}" alt="image de la voiture">
                                    </div>
                                </div>
                           {% endif %}
                        {% endfor %}
                        
                        <div class="col-md-3">
                            <div class="characteristic-box">
                                <h3 class="text-center my-auto" style="background-color: #ffffff; color: #000000;">Caractéristiques</h3>
                                <div class="row">
                                    <div class="col-sm-6 my-3 px-4">
                                        <h4>Équipements</h4>
                                        <ul class="list-unstyled">
                                            {% for equipementVoiture in equipementsVoiture %}
                                                {% if equipementVoiture.IDvoiture == voiture %}
                                                    <li class="small-text">{{ equipementVoiture.IDequipement.getNom() }}</li>
                                                {% endif %}
                                            {% endfor %}
                                        </ul>
                                    </div>
                                    <div class="col-sm-6 my-3 px-4">
                                        <h4>Options</h4>
                                        <ul class="list-unstyled">
                                            {% for optionVoiture in optionsVoiture %}
                                                {% if optionVoiture.IDvoiture == voiture %}
                                                    <li class="small-text">{{ optionVoiture.IDoptions.getNom() }}</li>
                                                {% endif %}
                                            {% endfor %}
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>

                    <div class="separation"></div>
                </div>
                
             {% endif %}
        {% endfor %}
    </div>  
    
    

    <hr class="custom-line"><hr class="custom-line">
    <div class="text-center my-5">
         <div class="h4-title rounded d-inline-block pl-2 pt-2 custom-width">
            <h4 class="text-center display-6 my-1">Intérêt pour une de nos voitures</h4>
        </div>
    </div>

    <script>
        // Attendre que le document soit chargé
        document.addEventListener("DOMContentLoaded", function () {
        // Sélectionner tous les éléments des boutons
        var boutons = document.querySelectorAll(".btn-primary");

        // Parcourir tous les boutons et ajouter un écouteur d'événement de clic à chacun
        boutons.forEach(function (bouton) {
            bouton.addEventListener("click", function (event) {
            event.preventDefault(); // Empêcher le comportement par défaut du lien

            // Sélectionner l'élément de la photo de gauche correspondant au bouton cliqué
            var voitureImage = bouton.parentNode.querySelector(".voiture-item img");

            // Créer un élément de texte
            var texte = document.createElement("div");
            texte.innerText = "Votre texte ici";

            // Remplacer la photo par le texte
            voitureImage.parentNode.replaceChild(texte, voitureImage);
            });
        });
        });

    </script>



{% endblock %}

{% block formulaireClients %}
    <section data-bs-version="5.1" class="my-5">
      <div class="container">
        <div class="row justify-content-center mt-4 ">
            <div class="col-lg-7 mx-auto">
              <div class="card">
                <div class="card-body bg-success">
                  <div class="mt-4 pt-2">
                    <h3 class="align-center mb-0 display-4 text-center"><strong>Contactez-nous</strong></h3>
                  </div>
                    <form method="POST" action="{{ path('contactClients') }}" class=" mx-auto" data-form-title="Form Name">
                      <input type="hidden" name="email" data-form-email="true" value="">
                      <div class="row">
                          <div hidden="hidden" data-form-alert="" class="alert alert-success col-12">Merci de nous avoir contacté</div>
                          <div hidden="hidden" data-form-alert-danger="" class="alert alert-danger col-12"></div>
                      </div>
                      <div class="row">
                        <div class="col-lg-7 col-md-7 col-sm-7 mx-auto">
                            <p class="align-left mb-4 text-center">
                                ( Un membre de notre équipe vous recontactera. )
                            </p>
                        </div>

                        <div class="col-lg-7 col-md-7 col-sm-7 mx-auto form-group mb-3" data-for="select">
                            <div class="input-group">
                                <select name="selectId" data-form-field="select" class="form-control" id="select-form7-o">
                                <option value="">Référence de l'annonce &#9660;</option>
                                    {% for voiture in voitures %}
                                        {% if not voiture.vendu %}
                                            <option value="{{ voiture.id }}">{{ voiture.reference }}</option>
                                        {% endif %}
                                    {% endfor %}
                                </select>
                            </div>
                        </div>

                        <div class="col-lg-7 col-md-7 col-sm-7 mx-auto form-group mb-3" data-for="name">
                            <input type="text" name="name" placeholder="Nom" data-form-field="name" class="form-control" value="" id="name-form7-o">
                        </div>
                        <div class="col-lg-7 col-md-7 col-sm-7 mx-auto form-group mb-3" data-for="name">
                            <input type="text" name="prenom" placeholder="Prénom" data-form-field="prenom" class="form-control" value="" id="prenom-form7-o">
                        </div>

                        <div class="col-lg-7 col-md-7 col-sm-7 mx-auto form-group mb-3" data-for="email">
                            <input type="email" name="email" placeholder="Adresse Email" data-form-field="email" class="form-control" value="" id="email-form7-o">
                        </div>
                        <div class="col-lg-7 col-md-7 col-sm-7 mx-auto form-group mb-3" data-for="phone">
                            <input type="tel" name="phone" placeholder="Téléphone" data-form-field="phone" class="form-control" value="" id="phone-form7-o">
                        </div>
                        <div class="col-lg-7 col-md-7 col-sm-7 mx-auto form-group mb-3" data-for="phone">
                            <input type="tel" name="message" placeholder="Message" data-form-field="message" class="form-control" value="" id="message-form7-o">
                        </div>
                        <div class="col-lg-7 mx-auto mbr-section-btn align-center">
                            <button type="submit" class="btn btn-primary display-4">Envoyer</button>
                        </div>
                      </div>
                </form>
                </div>
              </div>
              
              
            </div> 
          </div> 
        </div>  
      </div>   
    </div>
  </section>
{% endblock %}



